<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/countTextView"
    android:id="@+id/countTextView"
    android:layout_gravity="left|center"
    android:padding="10dp"
    android:textSize="20sp"
    android:textStyle="bold"
    android:layout_below="@+id/countLabel"
    android:layout_centerHorizontal="true" />


<Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="90dp"
    android:layout_height="45dp"
    android:text="@string/incrementButton"
    android:id="@+id/incrementButton"
    android:padding="10dp"
    android:singleLine="true"
    android:layout_below="@+id/countTextView"
    android:layout_toLeftOf="@+id/countLabel"
    android:layout_toStartOf="@+id/countLabel" />

<Button
    android:layout_width="90dp"
    android:layout_height="45dp"
    android:text="@string/resetButton"
    android:id="@+id/resetButton"
    android:padding="10dp"
    android:layout_alignTop="@+id/incrementButton"
    android:layout_toRightOf="@+id/countLabel"
    android:layout_toEndOf="@+id/countLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_count"
        android:id="@+id/countLabel"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="38dp"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
